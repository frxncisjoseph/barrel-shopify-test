<div class="outer mt2 align-l">
  <div class="account-entry-form mha">
    <h1 class="h2 mb05">Reset Password</h1>

    {% form 'reset_customer_password' %}

      {{ form.errors | default_errors }}

      {% assign field_label = 'Password' %}
      {% assign field_name = 'customer[password]' %}
      {% assign field_type = 'password' %}
      {% include 'input-text' %}

      {% assign field_label = 'Confirm' %}
      {% assign field_name = 'customer[password_confirmation]' %}
      {% assign field_type = 'password' %}
      {% include 'input-text' %}

      <div class="mt2">
        <button type="submit" class="button">Reset</button>
      </div>

    {% endform %}
  </div>
</div>
